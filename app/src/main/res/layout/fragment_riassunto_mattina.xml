<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background_transparent"
    android:backgroundTint="@android:color/transparent"
    android:orientation="vertical"
    android:outlineProvider="paddedBounds"
    tools:context="menuFragment.RiassuntoMattina">

    <!-- TODO: Update blank fragment layout -->


    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewMattina"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_transparent"
        android:backgroundTint="@android:color/transparent"
        android:foregroundGravity="center_vertical"
        android:outlineProvider="none"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arimo_bold"
                android:gravity="center"
                android:text="Colazione"
                android:textSize="30sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardSaturi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:outlineProvider="bounds"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:strokeColor="#FFC107"
                        app:strokeWidth="3dp">

                        <TextView
                            android:id="@+id/TextSaturi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/arimo_bold"
                            android:padding="15dp"
                            android:text="SATURI: "
                            android:textSize="15sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/grassi" />

                        <TextView
                            android:id="@+id/Saturi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical|end"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/arimo_bold"
                            android:text="10"
                            android:textSize="20sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardViewCalorie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:outlineProvider="none"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:strokeColor="#F1E5FB"
                        app:strokeWidth="3dp">

                        <TextView
                            android:id="@+id/TextCalorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arimo_bold"
                            android:padding="15dp"
                            android:text="CALORIE: "
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/arimo_bold"
                            android:text="10"
                            android:textSize="20sp" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGrassi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2.5dp"
                        android:layout_weight="1"
                        android:outlineProvider="none"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:strokeColor="#F1E5FB"
                        app:strokeWidth="3dp">

                        <TextView
                            android:id="@+id/TextGrassi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arimo_bold"
                            android:padding="15dp"
                            android:text="GRASSI: "
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/grassi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/arimo_bold"
                            android:text="10"
                            android:textSize="20sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardViewCarboidrati"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2.5dp"
                        android:layout_weight="1"
                        android:outlineProvider="none"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:cardCornerRadius="20dp"
                        app:strokeColor="#F1E5FB"
                        app:strokeWidth="3dp">

                        <TextView
                            android:id="@+id/TextCarboidrati"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arimo_bold"
                            android:padding="15dp"
                            android:text="CARBOIDRATI: "
                            android:textSize="15sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/calorie" />

                        <TextView
                            android:id="@+id/carboidrati"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/arimo_bold"
                            android:gravity="center"
                            android:text="10"
                            android:textSize="20sp" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>